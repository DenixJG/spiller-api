<section class="h-100">
    <div class="container h-100 my-5">
        {{#if playlist}}
        <div class="card">
            <div class="card-header bg-info bg-gradient text-white">
                <i class="fas fa-list"></i>
            </div>
            <div class="card-body">
                <h5 class="card-title">{{playlist.name}}</h5>
                <div class="dropdown-divider"></div>
                <div class="row">
                    {{!-- Descripcion --}}
                    <div class="col-2">
                        <p>Descripci&oacute;n:</p>
                    </div>
                    <div class="col-10">
                        <span>{{playlist.description}}</span>
                    </div>

                    {{!-- Creador --}}
                    <div class="col-2">
                        <p>Creador:</p>
                    </div>
                    <div class="col-10">
                        <span>{{user.username}}</span>
                    </div>
                </div>
                <div class="mt-4 mb-2">
                    <h6 class="card-subtitle mt-3 mb-2 text-muted">Canciones</h6>
                    <div class="dropdown-divider"></div>
                    {{#if playlist.tracks}}
                    {{> trackCard tracks=playlist.tracks}}
                    {{log playlist}}
                    {{else}}
                    <p class="text">No hay ninguna canci&oacute;n</p>
                    {{/if}}
                </div>
            </div>
        </div>
        {{else}}
        <p>No se encuentra la <span class="text-muted text-decoration-underline">Playlist</span></p>
        {{/if}}

    </div>
</section>