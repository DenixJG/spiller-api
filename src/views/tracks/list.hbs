<section class="h-100">
    {{#or role.isAdmin role.isArtist}}
    <div class="container mt-4">
        <div class="d-grid gap-2 col-6 mx-auto">
            <a href="/tracks/new" class="btn btn-primary">Agregar Canci&oacute;n</a>
        </div>
    </div>
    {{/or}}
    <div class="container mt-4 p-4">
        {{#each tracks as |track|}}
        <div class="card text-white bg-dark mb-3" data-track-id="{{track._id}}">
            <div class="row">
                <div class="col-md-2 text-center m-auto">
                    <i class="fa-solid fa-play" data-track-file-id="{{track.trackFileId}}"
                        onclick="playAudio(this)"></i>
                </div>
                <div class="col-md-10">
                    <div class="card-body">
                        <h6 class="card-title">{{track.name}}</h6>
                        <p class="card-text"><small class="text-muted">{{track.artistId.name}}</small></p>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 0%" id="progress"></div>
                        </div>
                        <audio id="player" hidden="true" preload="none"
                            src="http://localhost:4000/tracks/play/{{track.trackFileId}}"></audio>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</section>