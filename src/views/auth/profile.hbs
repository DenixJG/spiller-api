<section class="h-100">
    <div class="container h-100 my-5">
        <div class="card">
            <div class="card-header bg-info bg-gradient text-white">
                <i class="fas fa-user"></i>
            </div>
            <div class="card-body">
                <h5 class="card-title">Bienvenido a tu perfil <b class="text-capitalize">{{user.username}}</b></h5>
                <div class="dropdown-divider"></div>
                <div class="row">
                    {{!-- Correo --}}
                    <div class="col-1">
                        <p>Correo:</p>
                    </div>
                    <div class="col-11">
                        <span>{{user.email}}</span>
                    </div>

                    {{!-- Rol --}}
                    <div class="col-1">
                        <p>Mi rol:</p>
                    </div>
                    <div class="col-11">
                        {{#if role.isAdmin}} <span>Administrador</span>{{/if}}
                        {{#if role.isArtist}} <span>Artista</span> {{/if}}
                        {{#if role.isUser}} <span>Usuario</span> {{/if}}
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-primary" href="#">Convertirse en Artista</a>
            </div>
        </div>
    </div>
</section>